<?xml version="1.0" encoding="utf-8"?>
<dev.epegasus.storyview.utils.PullDismissLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pull_dismiss_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <dev.epegasus.storyview.progress.StoriesProgressView
            android:id="@+id/storiesProgressView"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ifv_close_Dialog_Stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@+id/ifv_image_Dialog_Stories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ifv_image_Dialog_Stories" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ifv_image_Dialog_Stories"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storiesProgressView"
            app:roundPercent="1"
            tools:background="@color/white"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_title_Dialog_Stories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/mtv_subtitle_Dialog_Stories"
            app:layout_constraintEnd_toStartOf="@+id/ifv_close_Dialog_Stories"
            app:layout_constraintStart_toEndOf="@+id/ifv_image_Dialog_Stories"
            app:layout_constraintTop_toTopOf="@+id/ifv_image_Dialog_Stories"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Title"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_subtitle_Dialog_Stories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ifv_image_Dialog_Stories"
            app:layout_constraintEnd_toEndOf="@+id/mtv_title_Dialog_Stories"
            app:layout_constraintStart_toEndOf="@+id/ifv_image_Dialog_Stories"
            app:layout_constraintTop_toBottomOf="@+id/mtv_title_Dialog_Stories"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Subtitle"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</dev.epegasus.storyview.utils.PullDismissLayout>